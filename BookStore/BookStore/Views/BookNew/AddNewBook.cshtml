@model BookModel

@{
    ViewData["Title"] = "Book New-Add New Book";
}

<div class="container">
    <h3 class="display-4">Book New-Add New Book</h3>
    <form method="post" asp-controller="BookNew" asp-action="AddNewBook">
        <div class="form-group">
            @*<label name="html label"></label>
            <input type="text" />*@

            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />

            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />

            <label asp-for="Description"></label>
            @*<input asp-for="Description" class="form-control" />*@
            <textarea asp-for="Description" class="form-control"></textarea>

            <label asp-for="TotalPages"></label>
            <input asp-for="TotalPages" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-primary" />
        </div>
    </form>
</div>
